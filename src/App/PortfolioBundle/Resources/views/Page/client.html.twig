                        {{ 'portfolio.client.section3.paragraphe2' | trans }}:
                    </p>
                    <figure>
                        <img src="{{ asset('/img/menu-user-'~ app.request.locale ~ '.jpg') }}" alt=""/>
                    </figure>
                </div>
            </div>
            
            <div id="section4" class="section-page">
                <h2>{{ 'portfolio.client.section4.titre' | trans }}</h2>
                <div class="section-page-content">
                    <p>
                        {{ 'portfolio.client.section4.paragraphe1' | trans }}                        
                    </p>
                </div>
            </div>
            
            <div id="section5" class="section-page">
                <h2>{{ 'portfolio.client.section5.titre' | trans }}</h2>
                <div class="section-page-content">
                    <p>
                        {{ 'portfolio.client.section5.paragraphe1' | trans }}                        
                    </p>
                    <p>
                        {{ 'portfolio.client.section5.exemple' | trans }}                        
                    </p>
                </div>
            </div>
            
            <div id="section6" class="section-page">
                <h2>{{ 'portfolio.client.section6.titre' | trans }}</h2>
                <div class="section-page-content">
                    <p>
                        {{ 'portfolio.client.section6.paragraphe1' | trans }}                        
                    </p>
                    <figure>
                        <img src="{{ asset('/img/projet-facture-'~ app.request.locale ~ '.jpg') }}" alt=""/>
                    </figure>
                </div>
            </div>
            
            <div id="section7" class="section-page">
                <h2>{{ 'portfolio.client.section7.titre' | trans }}</h2>
                <div class="section-page-content">
                    <p>
                        {{ 'portfolio.client.section7.paragraphe1' | trans }}                        
                    </p>
                    <ul>
                        {% for i in 0..1 %}
                        <li>{{ ('portfolio.client.section7.liste1.' ~ i) | trans }}</li>
                        {% endfor %}
                    </ul>
                    <p>
                        {{ 'portfolio.client.section7.paragraphe2' | trans }}                        
                    </p>
                    <p>
                        {{ 'portfolio.client.section7.paragraphe3' | trans }}                        
                    </p>
                    <figure>
                        <img src="{{ asset('/img/facture-paiement-'~ app.request.locale ~ '.jpg') }}" alt=""/>
                    </figure>
                </div>
            </div>
            
            <div id="section8" class="section-page">
                <h2>{{ 'portfolio.client.section8.titre' | trans }}</h2>
                <div class="section-page-content">
                    <p>
                        {{ 'portfolio.client.section8.paragraphe1' | trans }}                        
                    </p>
                    <p>
                        {{ 'portfolio.client.section8.paragraphe2' | trans }}                        
                    </p>
                    <p>
                        {{ 'portfolio.client.section8.paragraphe3' | trans }}                        
                    </p>
                </div>
            </div>
            
            <p>
                {{ 'portfolio.client.remerciement' | trans | nl2br }} 
            </p>
            
        </div>
    </div>
</div>
{% endblock %}