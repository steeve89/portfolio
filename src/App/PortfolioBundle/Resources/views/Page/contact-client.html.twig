{% extends "AppUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{ 'contact_client.title' | trans }} "{{ user.username }}"{% endblock %}
{% block description %}{% endblock %}
{% block keywords %}{% endblock %}

{% block header_title %}{{ 'contact_client.title' | trans }} "{{ user.username }}"{% endblock %}

{% block body %}
<div class="row-fluid">
    <form class="form-horizontal well" id="contactform" action="" method="post" {{ form_enctype(form) }}>
        <fieldset>
            <legend>{{ 'contact_client.title' | trans }}</legend>
            {{ form_widget(form) }}
            <div class="form-actions">
                <button class="btn btn-primary" type="submit">{{ 'contact_client.form.submit'|trans }}</button>
            </div>
        </fieldset>
    </form>
</div>
{% endblock %}