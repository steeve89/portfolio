{# Form contact #}
{% block contact_widget %}
{% spaceless %}
<div class="row-fluid">
    {# Affichage du champ nom #}
    <div class="control-group">
        {{ form_label(form.nom, null, {'label_attr': {'class' : 'control-label' }}) }}
        <div class="controls">        
            {{ form_widget(form.nom) }}
        </div>
        {{ form_errors(form.nom) }}
    </div>
    {# Affichage du champ telephone #}
    <div class="control-group">
        {{ form_label(form.telephone, null, {'label_attr': {'class' : 'control-label' }}) }}
        <div class="controls">        
            {{ form_widget(form.telephone) }}
        </div>
        {{ form_errors(form.telephone) }}
    </div>
    {# Affichage du champ email #}
    <div class="control-group">
        {{ form_label(form.email, null, {'label_attr': {'class' : 'control-label' }}) }}
        <div class="controls">        
            {{ form_widget(form.email) }}
        </div>
        {{ form_errors(form.email) }}
    </div>    
    {# Affichage du champ objet #}
    <div class="control-group">
        {{ form_label(form.objet, null, {'label_attr': {'class' : 'control-label' }}) }}
        <div class="controls">        
            {{ form_widget(form.objet) }}
        </div>
        {{ form_errors(form.objet) }}
    </div>  
    {# Affichage du champ message #}
    <div class="control-group">
        {{ form_label(form.message, null, {'label_attr': {'class' : 'control-label' }}) }}
        <div class="controls">        
            {{ form_widget(form.message, {'attr' : {'class' : 'span5'}}) }}
        </div>
        {{ form_errors(form.message) }}
    </div>      
    {{ form_rest(form) }} 
</div>
{% endspaceless %}
{% endblock %}
