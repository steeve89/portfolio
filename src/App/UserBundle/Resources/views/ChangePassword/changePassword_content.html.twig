{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password form-horizontal well">
    <fieldset>
        <legend class="text-center">{{ 'change_password.title' | trans }}</legend>
        {{ form_widget(form) }}
        <div class="form-action well text-center">
            <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans }}" />
        </div>
    </fieldset>
</form>
