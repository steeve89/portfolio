{% extends "AppUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{ 'user.partenaire.show.title' | trans({'%username%': entity.username }) }} | {{ parent() }}{% endblock %}
{% block description %}{% endblock %}
{% block keywords %}{% endblock %}

{% block header_title %}{{ 'user.partenaire.show.title' | trans({'%username%': entity.username }) }} | {{ parent() }}{% endblock %}

{% block body -%}
<div id="main">

    <table class="table table-hover">
        <tbody> 
            <tr>
                <th>{{ 'user.field.id'| trans }}</th>
                <td>{{ 'user.partenaire.prefix'| trans }}{{ entity.id }}</td>
            </tr>            
            <tr>
                <th>{{ 'user.field.nom'| trans }}</th>
                <td>{{ entity.nom }}</td>
            </tr>            
            <tr>
                <th>{{ 'user.field.prenom'| trans }}</th>
                <td>{{ entity.prenom }}</td>
            </tr>
            <tr>
                <th>{{ 'user.field.username'| trans }}</th>
                <td>{{ entity.username }}</td>
            </tr>            
            <tr>
                <th>{{ 'user.field.email'| trans }}</th>
                <td>{{ entity.email }}</td>
            </tr>  
            <tr>
                <th>{{ 'user.field.profession'| trans }}</th>
                <td>{{ entity.profession }}</td>
            </tr>            
            <tr>
                <th>{{ 'user.field.description'| trans }}</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>{{ 'user.field.projet'| trans }}</th>
                <td>{{ entity.projets | length }}</td>
            </tr>
            <tr>
                <th>{{ 'user.field.locked'| trans }}</th>
                <td>{% if entity.locked %}{{ 'user.choices.locked.1'| trans }}{% else %}{{ 'user.choices.locked.0'| trans }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="inline">
        <li>
            <a class="btn" href="{{ path('partenaire') }}">
                <i class="icon-chevron-left"></i>
                {{ 'user.partenaire.index.back' | trans }}
            </a>
        </li>
        <li>
            <a class="btn btn-primary" href="{{ path('partenaire_edit', { 'id': entity.id }) }}">
                <i class="icon-edit icon-white"></i>
                {{ 'actions.edit' | trans }}
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
</div>
{% endblock %}
