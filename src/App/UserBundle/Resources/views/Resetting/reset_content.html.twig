{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset form-horizontal well">
    <fieldset>
        <legend>{{ 'resetting.reset.title' | trans }}</legend>
        {{ form_widget(form) }}
        <div class="form-action well text-center">
            <input class="btn btn-primary" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
        </div>
    </fieldset>
</form>
