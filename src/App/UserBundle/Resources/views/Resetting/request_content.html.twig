{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal well">
    <fieldset>
        <legend class="text-center">{{ 'resetting.request.title' | trans }}</legend>
        <div>
            {% if invalid_username is defined %}
                <p class="alert alert-error text-center">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
            {% endif %}
            <div class="control-group">
                <label class="control-label" for="username">{{ 'resetting.request.username'|trans }}</label>
                <div class="controls">
                    <input type="text" id="username" name="username" required="required" />
                </div>
            </div>
        </div>
        <div class="form-action well text-center">
            <input class="btn btn-primary" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
        </div>
    </fieldset>
</form>
