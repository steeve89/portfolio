{% trans_default_domain 'FOSUserBundle' %}

{% block user_widget %}
{% spaceless %}
<fieldset>
    <legend>
        {% if form.typeUser.vars.value == 'client' %}
            {% set textatraduire = 'user.client' %}
        {% else %}
            {% set textatraduire = 'user.partenaire' %}
        {% endif %}
        {% if form.plainPassword.vars.value is not defined %}
            {{ ( textatraduire ~ '.edit.title' ) | trans({'%username%': form.username.vars.value }) }}            
        {% else %}
            {{ ( textatraduire ~ '.new.title' ) | trans }}
        {%endif %}
    </legend>
    <div class="row-fluid">
        <div class="span5">
            {# Affichage du champ nom #}
            <div class="control-group">
                {{ form_label(form.nom, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                    {{ form_widget(form.nom, {'attr' : {'class' : ''}}) }}
                </div>
                {{ form_errors(form.nom) }}
            </div>
            {# Affichage du champ prenom #}
            <div class="control-group">
                {{ form_label(form.prenom, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                    {{ form_widget(form.prenom, {'attr' : {'class' : ''}}) }}
                </div>
                {{ form_errors(form.prenom) }}
            </div>
            {# Affichage du champ email #}
            <div class="control-group">
                {{ form_label(form.email, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                    {{ form_widget(form.email, {'attr' : {'class' : ''}}) }}
                </div>
                {{ form_errors(form.email) }}
            </div>
            {# Affichage du champ telephone #}
            <div class="control-group">
                {{ form_label(form.telephone, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                    {{ form_widget(form.telephone, {'attr' : {'class' : ''}}) }}
                </div>
                {{ form_errors(form.telephone) }}
            </div>        
            {# Affichage du champ username #}
            <div class="control-group">
                {{ form_label(form.username, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                    {{ form_widget(form.username, {'attr' : {'class' : ''}}) }}
                </div>
                {{ form_errors(form.username) }}
            </div>
            {# Affichage du champ plainPassword #}
            {% if form.plainPassword is defined %}
            {% for password in form.plainPassword %}
            <div class="control-group">
                {{ form_label(password, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                    {{ form_widget(password, {'attr' : {'class' : ''}}) }}
                </div>
                {{ form_errors(password) }}
            </div>
            {% endfor %}
            {% endif %}
            {% if form.remise is defined %}
            {# Affichage du champ remise #}
            <div class="control-group">
                {{ form_label(form.remise, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">        
                    {{ form_widget(form.remise) }}
                </div>
                {{ form_errors(form.remise) }}
            </div>
            {% endif %}
        </div>
        <div class="span7">
            {# Affichage du champ skype #}
            <div class="control-group">
                {{ form_label(form.skype, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                    {{ form_widget(form.skype, {'attr' : {'class' : ''}}) }}
                </div>
                {{ form_errors(form.skype) }}
            </div>
            {# Affichage du champ profession #}
            <div class="control-group">
                {{ form_label(form.profession, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                    {{ form_widget(form.profession, {'attr' : {'class' : ''}}) }}
                </div>
                {{ form_errors(form.profession) }}
            </div>
            {# Affichage du champ description #}
            <div class="control-group">
                {{ form_label(form.description, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                    {{ form_widget(form.description, {'attr' : {'class' : 'span10'}}) }}
                </div>
                {{ form_errors(form.description) }}
            </div>
            <div class="control-group">
                <div class="controls">
                    {{ form_widget(form.locked, {'attr' : {'class' : 'checkbox'}}) }}
                    {{ form_label(form.locked, null, {'label_attr': {'class' : 'checkbox inline' }}) }}
                </div>
                {{ form_errors(form.locked) }}
            </div>            
        </div>
        <div class="clearfix"></div>
        <div class="form-actions text-center">
            {{ form_rest(form) }} 
        </div>
    </div>
</fieldset>
{% endspaceless %}
{% endblock %}


