{% extends "AppUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{ 'categorie.edit.title' | trans({'%nom%': entity.nom }) }} | {{ parent() }}{% endblock %}
{% block description %}{% endblock %}
{% block keywords %}{% endblock %}

{% block header_title %}{{ 'categorie.edit.title' | trans({'%nom%': entity.nom }) }} | {{ parent() }}{% endblock %}

{% block body -%}
<div class="main">
    
    {{ form(edit_form) }}

    <ul class="inline">
        <li>
            <a class="btn" href="{{ path('categorie') }}">
                <i class="icon-chevron-left"></i>
                {{ 'categorie.index.back' | trans }}
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
</div>
{% endblock %}
