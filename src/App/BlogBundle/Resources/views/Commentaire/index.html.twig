{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Liste des Commentaires</h1>

    <table class="table table-hover">
        <thead>
            <tr>  
                    <th>{{ 'commentaire.field.id'| trans }}</th>  
                    <th>{{ 'commentaire.field.nom'| trans }}</th>  
                    <th>{{ 'commentaire.field.prenom'| trans }}</th>  
                    <th>{{ 'commentaire.field.email'| trans }}</th>  
                    <th>{{ 'commentaire.field.contenu'| trans }}</th>  
                    <th>{{ 'commentaire.field.note'| trans }}</th>
                <th>{{ 'actions.title' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('commentaire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.contenu }}</td>
                <td>{{ entity.note }}</td>
                <td>
                <ul class="inline">
                    <li>
                        <a class="btn" href="{{ path('commentaire_show', { 'id': entity.id }) }}">{{ 'actions.show' | trans }}</a>
                    </li>
                    <li>
                        <a class="btn" href="{{ path('commentaire_edit', { 'id': entity.id }) }}">{{ 'actions.edit' | trans }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul class="inline">
        <li>
            <a class="btn" href="{{ path('commentaire_new') }}">
                {{ 'commentaire.index.new' | trans }}
            </a>
        </li>
    </ul>
    {% endblock %}
