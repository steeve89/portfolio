{% extends "AppUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{ 'article.edit.title' | trans({'%titre%': entity.titre }) }} | {{ parent() }}{% endblock %}
{% block description %}{% endblock %}
{% block keywords %}{% endblock %}

{% block header_title %}{{ 'article.edit.title' | trans({'%titre%': entity.titre }) }} | {{ parent() }}{% endblock %}

{% block body -%}
<div class="main">

    {{ form(edit_form) }}

    <ul class="inline">
        <li>
            <a class="btn" href="{{ path('article') }}">
                <i class="icon-chevron-left"></i>
                {{ 'article.index.back' | trans }}
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>

</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ tinymce_init() }}
{% endblock %}
