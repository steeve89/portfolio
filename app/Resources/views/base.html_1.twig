<!doctype html>
<html lang="{{ app.request.locale }}">
    <head>        
        <title>{% block title %}{{ 'site.title' | trans }}{% endblock %}</title> 
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" lang="{{ app.request.locale }}" content="{% block description %}{% endblock %}"/>        
        <meta name="keywords" lang="{{ app.request.locale }}" content="{% block keywords %}{% endblock %}"/>
        <meta name="author" content="Steeve LOKO">
        <meta name="copyright" content="loko-steeve.com">
        {% block meta_identifier_url %}{% endblock %}                
        {% block stylesheets %}
            {%  stylesheets 
                    '@bootstrap_css'
                    '@AppPortfolioBundle/Resources/public/css/portfolio.css' 
                    filter = 'cssrewrite'
                    output = 'css/style.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
    </head>
    <body>
        <div class="container-fluid">            
            <header class="row-fluid">
                <div class="span6">
                    {% block logo %}
                    <a title="" href="#"><img src="{{ asset('/img/logo-2.jpg') }}" alt="" /></a>
                    {% endblock %}
                </div>
                <div class="span6">
                    <div class="row-fluid">
                        <div class="span12">
                            <ul class="inline pull-right">
                                <li><a title="{{ 'site.entete.langue.fr' | trans }}" href="#"><img src="{{ asset('/img/fr.png') }}" alt="{{ 'site.entete.langue.fr' | trans }}"/></a></li>
                                <li><a title="{{ 'site.entete.langue.en' | trans }}" href="#"><img src="{{ asset('/img/en.png') }}" alt="{{ 'site.entete.langue.en' | trans }}"/></a></li>
                            </ul>
                        </div>              
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <ul class="inline pull-right">
                                <li><a class="btn btn-inverse" title="{{ 'site.entete.menu_utilisateur.compte' | trans }}" href="#">{{ 'site.entete.menu_utilisateur.compte' | trans }}</a></li>                                
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}                                    
                                <li><a class="btn btn-info" title="{{ 'site.entete.menu_utilisateur.visioconference' | trans }}" href="#">{{ 'site.entete.menu_utilisateur.visioconference' | trans }}</a></li>
                                <li><a class="btn btn-danger" title="{{ 'site.entete.menu_utilisateur.deconnexion' | trans }}" href="#">{{ 'site.entete.menu_utilisateur.deconnexion' | trans }}</a></li>
                                {% else %}
                                <li><a class="btn btn-info" title="{{ 'site.entete.menu_utilisateur.inscription' | trans }}" href="#">{{ 'site.entete.menu_utilisateur.inscription' | trans }}</a></li>
                                <li><a class="btn btn-info" title="{{ 'site.entete.menu_utilisateur.connexion' | trans }}" href="#">{{ 'site.entete.menu_utilisateur.connexion' | trans }}</a></li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                {% block navbar %}
                <div class="navbar">                    
                    <nav class="navbar-inner">
                        <ul class="nav nav-pills">
                            <li><a title="{{'site.entete.menu.accueil' | trans}}" href="#">{{'site.entete.menu.accueil' | trans}}</a></li>  
                            <li><a title="{{'site.entete.menu.profile' | trans}}" href="#">{{'site.entete.menu.profil' | trans}}</a></li>
                            <li><a title="{{'site.entete.menu.realisations' | trans}}" href="#">{{'site.entete.menu.realisations' | trans}}</a></li>
                            <li><a title="{{'site.entete.menu.projets' | trans}}" href="#">{{'site.entete.menu.projets' | trans}}</a></li>
                            <li><a title="{{'site.entete.menu.cours' | trans}}" href="#">{{'site.entete.menu.cours' | trans}}</a></li>
                            <li><a title="{{'site.entete.menu.themes' | trans}}" href="#">{{'site.entete.menu.themes' | trans}}</a></li>
                            <li><a title="{{'site.entete.menu.site_vitrine' | trans}}" href="#">{{'site.entete.menu.site_vitrine' | trans}}</a></li>
                            <li><a title="{{'site.entete.menu.contact' | trans}}" href="#">{{'site.entete.menu.contact' | trans}}</a></li>
                        </ul>
                    </nav>
                </div>
                {% endblock %}
            </header>
                
            {% block body %}{% endblock %}

            <footer class="row-fluid">
                <p class="text-center">
                    {{ 'site.pied_de_page.copyright' | trans }}
                </p>
            </footer>
        </div>
      
        {% block javascripts %}
            {% javascripts output='js/main.js' filter='' '@jquery' '@jquery_ui' '@bootstrap_js'%}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
